{% extends '@Layout/Page/Admin/base.html.twig' %}

{% block body %}
    {% for item in items %}
        {% if loop.index0 % 2 == 0 %}
            <div class="row">
        {% endif %}
        <div class="col-md-6">
            {% include '@Widget/Item/Admin/base.html.twig' with
                {
                    'item': item,
                    'showing_route': path("app_admin_item_model_showing_show_item_model", {"id": item.id}),
                    'manage_route': path("app_admin_item_model_edition_edit_item_model", {"id": item.id}),
                    'duplicate_route': path("app_admin_item_model_duplication_duplicate_item_model", {"id": item.id})
                }
            %}
        </div>
        {% if loop.index0 % 2 != 0 or (loop.last and loop.index0 % 2 == 0)%}
            </div>
        {% endif %}
    {% endfor %}
{% endblock body %}