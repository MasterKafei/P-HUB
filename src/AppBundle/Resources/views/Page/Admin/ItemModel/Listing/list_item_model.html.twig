{% extends '@Layout/Page/Admin/base.html.twig' %}

{% block body %}
    {% for item in items %}
        {% if loop.index0 % 2 == 0 %}
            <div class="row">
        {% endif %}
        <div class="col-md-6">
            {% include '@Widget/Item/Admin/base.html.twig' with {'item': item} %}
        </div>
        {% if loop.index0 % 2 != 0 or (loop.last and loop.index0 % 2 == 0)%}
            </div>
        {% endif %}
    {% endfor %}
{% endblock body %}